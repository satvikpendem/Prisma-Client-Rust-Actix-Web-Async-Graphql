datasource database {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/prisma_rust_client_example"
}

generator client {
  provider = "cargo prisma"
  output   = "../src/prisma.rs"
}

model User {
  id          String @id @default(uuid())
  displayName String
  posts       Post[]
}

model Post {
  id      String @id @default(uuid())
  content String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}
